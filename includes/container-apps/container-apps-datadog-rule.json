{
    ...
    "resources": {
      ...
      "properties": {
        "configuration": {
          "secrets": [{
            "name": "<MY_CONNECTION_STRING_NAME>",
            "value": "<MY_CONNECTION_STRING>"
          }],
        },
        "template": {
          ...
          "scale": {
            "minReplicas": "0",
            "maxReplicas": "30",
            "rules": [
            {
              "name": "datadog-rule",
              "custom": {
                "type": "datadog",
                "metadata": {
                  "query": "sum:trace.redis.command.hits{env:none,service:redis}.as_count()",
                  "queryValue": "7.75",
                  "activationQueryValue": "1.1",
                  "type": "global",
                  "age": "120",
                  "metricUnavailableValue": "1.5"
                },
                "auth": [{
                  "secretRef": "<MY_CONNECTION_STRING_NAME>",
                  "triggerParameter": "<TRIGGER_PARAMETER>"
                }]
          }
      }]
  }