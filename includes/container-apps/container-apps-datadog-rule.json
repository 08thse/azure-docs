{
    ...
    "resources": {
      ...
      "properties": {
        "configuration": {
          "secrets": [{
            "name": "<MY_CONNECTION_STRING_NAME>",
            "value": "<MY_CONNECTION_STRING>"
          }],
        },
        "template": {
          ...
          "scale": {
            "minReplicas": "0",
            "maxReplicas": "30",
            "rules": [
            {
              "name": "azure-queue-rule",
              "custom": {
                "type": "azure-queue",
                "metadata": {
                  "queueName": "<MY_QUEUE_NAME>",
                  "queueLength": "5",
                  "activationQueueLength": "50",
                  "connectionFromEnv": "<MY_STORAGE_CONNECTION_STRING_ENV_NAME>",
                  "accountName": "<MY_STORAGE_ACCOUNT_NAME>",
                  "cloud": "AzureUSGovernmentCloud"
                },
                "auth": [{
                  "secretRef": "<MY_CONNECTION_STRING_NAME>",
                  "triggerParameter": "<TRIGGER_PARAMETER>"
                }]
          }
      }]
  }